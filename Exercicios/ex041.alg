algoritmo "ex041"
var
   contador: inteiro
inicio
      escreval("Desenvolva um programa que mostre na tela a seguinte contagem:")
      escreval()
      contador <- 100
      enquanto (contador >= 0) faca
               escreval(contador," ")
               contador <- contador - 5
      fimenquanto
      escreva("Acabou!")
      escreval()
fimalgoritmo
