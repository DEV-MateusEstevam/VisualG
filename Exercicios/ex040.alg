algoritmo "ex040"
var
   contador: inteiro
inicio
      escreval("40) Crie um aplicativo que mostre na tela a seguinte contagem:")
      escreval()
      contador <- 0
      enquanto (contador <= 18) faca
               escreva(contador," ")
               contador <- contador + 3
      fimenquanto
      escreval("Acabou!")
fimalgoritmo
